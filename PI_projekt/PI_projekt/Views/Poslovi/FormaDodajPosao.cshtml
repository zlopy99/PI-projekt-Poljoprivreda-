@model PI_projekt.Models.Poslovi

<h4>Poslovi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="DodajPosao">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.ID" asp-for="PosloviId" />
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
                @ViewBag.Message
                @ViewBag.err
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="povratak" asp-controller="Poslovi" asp-action="DodajNovuAktivnost" asp-route-id="@ViewBag.ID">Povratak</a>
</div>

