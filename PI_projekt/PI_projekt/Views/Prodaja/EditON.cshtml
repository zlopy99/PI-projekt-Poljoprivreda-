@model PI_projekt.Models.OstvareneNarudzbe

<h4>Detalji narudžbe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="EditON">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.ID" asp-for="OstvareneNarudzbeId" />
            <!--<input type="hidden" value="ViewBag.BiljkaID" asp-for="Biljka" />-->
            <input type="hidden" value="@ViewBag.KorisnikID" asp-for="Korisnik" />
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
                <!--<a asp-controller="KorisnikBiljke" asp-action="KorisnikBiljkeIndex">Provjeri ID biljke</a>-->
            </div>
            <div class="form-group">
                <label asp-for="Zarada" class="control-label"></label>
                <input asp-for="Zarada" class="form-control" />
                <span asp-validation-for="Zarada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kolicina" class="control-label"></label>
                <input asp-for="Kolicina" class="form-control" />
                <span asp-validation-for="Kolicina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kupac" class="control-label"></label>
                <select asp-for="Kupac" class="form-control" asp-items="ViewBag.Kupac"></select>
                <span asp-validation-for="Kupac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Biljka" class="control-label"></label>
                <select asp-for="Biljka" class="form-control" asp-items="ViewBag.BiljkaID"></select>
                <span asp-validation-for="Biljka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="povratak" asp-action="OstvareneNarudzbeIndex">Povratak</a>
</div>