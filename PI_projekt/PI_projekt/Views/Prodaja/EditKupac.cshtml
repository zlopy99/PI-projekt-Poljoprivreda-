@model PI_projekt.Models.Kupac

<h4>Kupac</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="EditKupac">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.KupacID" asp-for="KupacId" />
            <div class="form-group">
                <label asp-for="ImePrezime" class="control-label">Ime i prezime</label>
                <input asp-for="ImePrezime" class="form-control" />
                <span asp-validation-for="ImePrezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kontkat" class="control-label"></label>
                <input asp-for="Kontkat" class="form-control" />
                <span asp-validation-for="Kontkat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adresa" class="control-label"></label>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>
            @ViewBag.poruka
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="povratak" asp-action="KupciView">Povratak</a>
</div>