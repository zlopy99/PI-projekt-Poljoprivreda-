@model PI_projekt.Models.Upotreba

<h4>Upotreba</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="DodajUpotrebu">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.IDe" asp-for="UpotrebaId" />
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
                @ViewBag.Message
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="povratak" asp-action="PrikazFormeZaDodavanjeNoveUpotrebe" asp-route-id="@ViewBag.IDe">Povratak</a>
</div>

