@model PI_projekt.Models.BiljkaUpotreba

<h4>BiljkaUpotreba</h4>
<a class="gumbDodavanja" asp-action="FormaZaCraeteUpotrebu" asp-route-id="@ViewBag.IDe">Niste pronašli ono što tražite? Kliknite ovdje</a>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="DodajNovuUpotrebu">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.IDe" asp-for="Biljka" />
            <div class="form-group">
                <label asp-for="Upotreba" class="control-label"></label>
                <select asp-for="Upotreba" class="form-control" asp-items="ViewBag.Upotreba"></select>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
        @ViewBag.err
    </div>
</div>

<div>
    <a class="povratak" asp-action="UpotrebaIndex" asp-route-id="@ViewBag.IDe">Povratak</a>
</div>

