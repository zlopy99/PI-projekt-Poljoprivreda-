@model PI_projekt.Models.Lokacija

<h4>Lokacija</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="DodajLokaciju">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VrstaTla" class="control-label">Vrsta tla</label>
                <select asp-for="VrstaTla" class="form-control" asp-items="ViewBag.VrstaTla"><</select>
                    <!--<option disabled selected value="">Izaberi vrstu tla</option></select>-->
            </div>
            <div class="form-group">
                <label asp-for="UkupnaPovrsinaParcele" class="control-label">Ukupna površina zemlje</label>
                <input asp-for="UkupnaPovrsinaParcele" class="form-control" />
                <span asp-validation-for="UkupnaPovrsinaParcele" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObrađenaPovrsina" class="control-label">Obrađena/zasađena površina</label>
                <input asp-for="ObrađenaPovrsina" class="form-control" />
                <span asp-validation-for="ObrađenaPovrsina" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="povratak" asp-action="LokacijaIndex">Povratak</a>
</div>

