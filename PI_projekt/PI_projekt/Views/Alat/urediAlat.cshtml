@model PI_projekt.Models.Alat

<h4>Alat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AlatEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.Message" asp-for="AlatId" />
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Količina" class="control-label"></label>
                <input asp-for="Količina" class="form-control" />
                <span asp-validation-for="Količina" class="text-danger"></span>
            </div>
            @ViewBag.error
            <div class="form-group">
                <input type="submit" value="Spremi promjene" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="povratak" asp-action="AlatIndex">Povratak</a>
</div>
